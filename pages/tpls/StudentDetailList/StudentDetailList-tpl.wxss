
.products-box{
  margin:0rpx 20rpx 20rpx 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
}
.products-item{
  min-height:5rpx;
  width: 99.5%;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  background-color: #F5F6F5;
  display: flex;
  flex-direction:row;
  position: relative;

}

.products-item-rigth{
  width: 100%;
  height: 100rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  position: relative;
}
.products-item-rigth .name{

  font-size: 30rpx;
  font-weight:bold;
}

.arrow{
  position: absolute;
   width: 47rpx;
   height: 40rpx;
   top: 15rpx;
   right: 50rpx;
  }