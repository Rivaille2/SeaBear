@import "../tpls/StudentJob/StudentJob-tpl.wxss";
@import "../tpls/StudentDetail//StudentDetail-tpl.wxss";


.top {
  width: 100%;
  height: 230px;
  background: #23EBB9;
  padding-top: 15px;
  position: relative;
}


.center {
  width: 95%;
  height: 150px;
  background: white;
  display: flex;
  flex-direction: column;
  margin: 70rpx auto;
  border-radius: 5px;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80px;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #EEEEEE;
}

.center_top text{
  margin-top: 60rpx;
  margin-left: 60rpx;
  font-size: 42rpx;
  font-weight: 600;

}


.center_down {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 35px;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-left: 110rpx;
}

.center_rank {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.rank_text {
  height: 35px;
  line-height: 35px;
  margin-left: 10rpx;
  color: #AAAAAA;
}

.center_top image {
  width: 65px;
  height: 65px;
  margin-top: 50rpx;
  margin-left: 50rpx;
}

.center_score {
  width: 50%;
  height: 35px;
  display: flex;
  flex-direction: row;
}

.center_score image {
  width: 35px;
  height: 35px;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}


.pickerTop{
width: 100%;
height: 150rpx;
position: relative;
}
 .picker{

   position: absolute;
   left: 160rpx;
   top: 50rpx;

}
.picker text{
  font-size: 38rpx;
  font-weight: 600;
  color: orange;
}
